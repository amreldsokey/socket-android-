<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.eldsokey.testsocketandroid.MainActivity">

    <TextView
        android:id="@+id/TV_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client IP address of wireless :"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/TV_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="192.168.1.210"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_toEndOf="@+id/TV_hint"/>

    <TextView
        android:id="@+id/TV_hint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client port number: "
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:padding="8dp"
        android:layout_below="@+id/TV_hint"/>


    <TextView
        android:id="@+id/TV_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/TV_hint2"
        android:layout_below="@+id/TV_hint"/>

    <TextView
        android:id="@+id/TV_hint3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message from server : "
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:padding="8dp"
        android:layout_below="@+id/TV_hint2"/>

    <TextView
        android:id="@+id/ET_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message ..."
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="15sp"
        android:padding="8dp"
        android:layout_toEndOf="@+id/TV_hint3"
        android:layout_below="@+id/TV_hint2"/>



</RelativeLayout>
